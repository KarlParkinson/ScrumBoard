<%= content_for :head do %>
	<%= stylesheet_link_tag "welcome" %>
<% end %>

<%= content_for :body do %>

	<div class="site-wrapper">
		<div class="site-wrapper-inner">
			<div class="cover-container">
				<div class="masthead clearfix">
					<div class="inner">
						<h3 class="masthead-brand">ScrumBoard</h3>
						
						<ul class="nav masthead-nav">
							<li>
								<a href="https://github.com/KarlParkinson/ScrumBoard" target="_blank"><h3 class="masthead-brand">Code</h3></a>
							</li>
						</ul>
					</div>
				</div>
				
				<div class="form-container" id="form-container">
					<div class="popup-form">
						<%= render partial: "boards/create" %>
					</div>
				</div>
								
				<div class="inner cover">
					<h1 class="cover-heading">A Simple, Free Scrum Board.</h1>
					
					<p class="lead">ScrumBoard is a simple, free Ruby on Rails application that allows you to organize any project you wish.</p>

					<p class="lead">
						<!--<button class="btn btn-lg btn-info" id="my-link">Get Started</button>-->
						<%= link_to "Sign In With Google To Get Started", "/auth/google_oauth2", class: "btn btn-lg btn-info" %>
					</p>
				</div>

				<div class="mastfoot">
					<div class="inner">
						
						<p><a href="http://rubyonrails.org/" target="_blank"><small>Powered By Rails</small></a></p>
						
					</div>
				</div>
			</div>
		</div>
	</div>

	<% if flash[:message] %>
		<script>
		alert("<%= flash[:message] %>");
		</script>
	<% end %>
	
<% end %>
