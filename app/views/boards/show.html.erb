<%= content_for :head do %>
	<%= stylesheet_link_tag "board" %>
<% end %>

<%= content_for :body do %>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h4 class="navbar-text"><%= @board.name %></h4>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Home", root_url %></li>
					<li><%= link_to "Code", "https://github.com/KarlParkinson/ScrumBoard" %></li>
				</ul>
			</div>
		</div>
	</nav>
	
	<div class="flex-container">
		<div class="column"><h3>TODO</h3>
			<button class="btn btn-default">Add Task</button>
		</div>
		<div class="column"><h3>DOING</h3>
			<button class="btn btn-default">Add Task</button>
		</div>
		<div class="column"><h3>DONE</h3>
			<button class="btn btn-default">Add Task</button>
		</div>
	</div>
<% end %>
