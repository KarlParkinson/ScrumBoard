<%= content_for :head do %>
	<%= stylesheet_link_tag "board" %>
<% end %>

<%= content_for :body do %>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h4 class="navbar-text"><%= @board.name %></h4>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Home", root_url %></li>
					<li><%= link_to "Code", "https://github.com/KarlParkinson/ScrumBoard" %></li>
				</ul>
			</div>
		</div>
	</nav>
	
	<div class="flex-container">
		<div class="column" id="todo"><h3>TODO</h3>
			<% @todo.each do |task| %>
				<%= render partial: "tasks/task", locals: {task: task} %>
			<% end %>
			<button class="btn btn-default">Add Task</button>
		</div>
		<div class="column" id="doing"><h3>DOING</h3>
			<% @doing.each do |task| %>
				<%= render partial: "tasks/task", locals: {task: task} %>
			<% end %>
			<button class="btn btn-default">Add Task</button>
		</div>
		<div class="column" id="done"><h3>DONE</h3>
			<% @done.each do |task| %>
				<%= render partial: "tasks/task", locals: {task: task} %>
			<% end %>
			<button class="btn btn-default">Add Task</button>
		</div>
	</div>

	<div class="form-container" id="form-container">
		<div class="popup-form">
			<%= form_for :task, url: tasks_path, html: {role: "form", class: "form", name: "form"} do |f| %>
				<%= image_tag "3.png", class: "close-form-img", onclick: "div_hide()"%>
				<h2>Create New Task</h2>
				<hr>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control" , placeholder: "Task Description" %>
				</div>
				<div class="radio">
					<%= f.radio_button :status, "todo" %>
				</div>
				<div class="radio">
					<%= f.radio_button :status, "doing" %>
				</div>
				<div class="radio">
					<%= f.radio_button :status, "done" %>
				</div>
				<button type="submit" class="btn btn-default form-button">Create</button>
			<% end %>
		</div>
	</div>
<% end %>
