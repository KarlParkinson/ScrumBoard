<% boards.in_groups_of 3 do |group| %>
	<div class="row">
		<% group.compact.each do |board| %>
			<div class="col-md-4">
				<div class="square">
					<%= link_to board do %>
						<span class="link-spanner"><%= board.name %></span>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
