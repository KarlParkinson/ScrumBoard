<li class="task-list-entry" data-id="<%= task.id %>" data-cat="<%= task.status %>" pos="<%= task.priority %>">
	<div class="content">
		<span class="edit-delete">
			<%= link_to "Edit", edit_board_task_path(task.board_id, task.id), remote: true %>
			<%= link_to "Delete", [task.board, task], remote: true, method: :delete, data: { confirm: 'Are you sure?'} %>
		</span>
		<div id="<%= task.id %>-body-div">
			<%= render partial: 'tasks/task_body', locals: {task: task} %>
		</div>
	</div>
</li>
